<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<input type="checkbox" <% if @task.completed%>checked<% end %>>Completed

<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>

<p><%= link_to "Edit task", edit_path(@task) %></p>

<p><%= link_to "Back to list", "/tasks"%></p>
